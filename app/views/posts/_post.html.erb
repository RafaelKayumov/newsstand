<h2 class="blog-post-title"><%= post.title %></h2>
<p class="blog-post-meta"><%= post.formatted_creation_date %> by <a href="#"><%= post.user_email %></a></p>
<p><%= post.text %></p>
<p>
  <%= link_to action: 'vote', controller: 'posts', id: post.id, remote: true do %>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
  <% end %>
  <span class="rating-value" id="<%= post.id%>"><%= post.votes.count %></span>
</p>
