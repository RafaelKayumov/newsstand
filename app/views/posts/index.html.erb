<p align="center">
  <strong><%= link_to 'New post', new_post_path %></strong>
</p>

<% if @posts.count > 0 %>
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-12 blog-main">
        <div class="blog-post">
          <%= render partial: 'post', locals: { display_post: post } %>
          <p>
            <%= link_to 'Show', post_path(post) %>
            <% if can_moderate(post) %>
              , 
              <%= link_to 'Edit', edit_post_path(post) %>, 
              <%= link_to 'Delete', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' }
              %>
            <% end %>
          <hr>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="row">
    <h2>No news yet..</h2>
  </div>
<% end %>
